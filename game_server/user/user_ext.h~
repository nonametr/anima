#ifndef USER_EXT_H
#define USER_EXT_H

#include "user_interface.h"

///This class used to interact with users from other shards
class UserExt : public UserInterface
{

public:
    UserExt(uint32 uid, uint32 server_id);
    virtual ~UserExt();
///--------------SETTERS----------------
    virtual void set(const char* key, Value &value) {};
///-------------GETTERS-----------------
    virtual Value get(const char* key){ return Value(Value::UNKNOWN); }
private:
    uint32 _uid;
    uint32 _server_id;
};

#endif // USER_EXT_H
